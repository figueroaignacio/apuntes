---
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import Layout from '../layouts/Layout.astro';
import { indexNotes } from "../lib/config";
---

<Layout description={SITE_DESCRIPTION} title={SITE_TITLE}>
	<section>
		<div>
			<img src="https://github.com/figueroaignacio.png" alt="">
			<div>
				<h2>Ignacio Figueroa - Apuntes</h2>
			</div>
    </div>
    <p>
      Apuntes organizados por cuatrimestre y materia de la tecnicatura en programacion de la UTN (Universidad Tecnol√≥gica Nacional).
    </p>
		<ul>
			{indexNotes.map((item) => (	
				<>
      	  <h2>
				    {item.cuatrimestre}
      	  </h2>
      	  <ul>
      	    {item.subjects.map((subject) => (
							<li>
      	        <a href={subject.href} >
      	          {subject.title}
      	        </a>
      	      </li>
      	     ))}
          </ul>
        </>
  		))}
		</ul>
	</section>
</Layout>
	
<style>
	img {
		width: 5rem;
		height: 5rem;
	}
</style>
	