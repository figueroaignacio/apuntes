---
interface AssignatureCardProps {
  title: string;
  emoji: string;
  href: string;
}

const { title, emoji, href } = Astro.props;
---

<a href={href} class="assignature-card">
  <span>{title}</span>
  <span>{emoji}</span>
</a>

<style>
  .assignature-card {
    background-color: var(--card);
    padding: 1rem;
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: scale 0.1s ease-in-out;
    box-shadow: 5px 5px 0 var(--border);

    &:hover {
      scale: 1.02;
    }

    &:active {
      scale: 0.97;
    }

    & span:nth-child(1) {
      align-self: flex-start;
    }

    & span:nth-child(2) {
      align-self: flex-end;
    }
  }
</style>
