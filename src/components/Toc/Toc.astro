---
import styles from './Toc.module.css';

interface TocItem {
  text: string;
  slug: string;
  depth: number;
}

interface Props {
  toc: TocItem[];
}

const { toc } = Astro.props as Props;
---

{
  toc.length > 0 && (
    <nav class={styles.toc}>
      <p class={styles.title}>En esta pÃ¡gina</p>
      <ul class={styles.list}>
        {toc.map((heading) => (
          <li class={styles[`depth${heading.depth}`]}>
            <a href={`#${heading.slug}`} class={styles.text}>
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}
